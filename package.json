{
  "name": "adonis-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "node ace build --production",
    "start": "node server.js",
    "dev": "node ace serve --watch",
    "lint": "npm run prettify && npm run lint:eslint:quiet src",
    "lint:eslint:quiet": "eslint --ext .ts,.js --no-error-on-unmatched-pattern --quiet",
    "lint:eslint": "eslint --ext .ts,.js --no-error-on-unmatched-pattern",
    "lint:eslint:fix": "eslint --ext .ts,.js --no-error-on-unmatched-pattern --quiet --fix",
    "prettify": "prettier --write src",
    "prepare": "husky install"

  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run prettify",
      "npm run lint:eslint:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add --force"
    ]
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.3.0",
    "adonis-preset-ts": "^2.1.0",
    "pino-pretty": "^4.8.0",
    "typescript": "~4.2",
    "youch": "^2.2.2",
    "youch-terminal": "^1.1.1"
  },
  "dependencies": {
    "@adonisjs/ace": "^11.0.1",
    "@adonisjs/auth": "^5.1.1",
    "@adonisjs/core": "^5.1.7",
    "@adonisjs/hash": "^7.0.5",
    "@adonisjs/lucid": "^10.0.0",
    "@adonisjs/mail": "^7.1.1",
    "@adonisjs/repl": "^3.1.2",
    "@adonisjs/validator": "^5.1.0",
    "@adonisjs/view": "^6.0.2",
    "@rocketseat/adonis-bull": "^1.0.4",
    "adonis-bumblebee": "^2.2.0",
    "adonis-bumblebee-ts": "^1.0.0",
    "adonis5-sentry": "^2.0.0",
    "async": "^3.2.0",
    "luxon": "^1.27.0",
    "mysql": "^2.18.1",
    "phc-argon2": "^1.1.1",
    "proxy-addr": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^1.19.2",
    "prettier": "^2.2.1"
  }
}
